<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp"
            android:text="所有类型" />
        <Button
            android:id="@+id/screen1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="日本"/>
        <Button
            android:id="@+id/screen2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="韩国"/>
        <Button
            android:id="@+id/screen3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="欧美"/>
        <Button
            android:id="@+id/screen4"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="大陆"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/zongyi1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/screenzongyi1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/zongyi2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:id="@+id/screenzongyi2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/zongyi3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:id="@+id/screenzongyi3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/zongyi4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:id="@+id/screenzongyi4"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
