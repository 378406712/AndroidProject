<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@layout/boder">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  VIP会员服务"
            android:textColor="@android:color/background_dark"
            android:gravity="center|left"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:elevation="8dip">
            <Button
                android:id="@+id/btn_vipVideo"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:text="VIP视频"
                android:elevation="3dip"
                android:background="@android:color/transparent" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:elevation="3dip">
            <Button
                android:id="@+id/btn_renewalVip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="续费VIP会员"
                android:elevation="3dip"
                android:background="@android:color/transparent"/>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@layout/boder">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  视频功能"
            android:textColor="@android:color/background_dark"
            android:gravity="center|left"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:elevation="3dip"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_history"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/history" />
            <Button
                android:id="@+id/btn_history"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="历史记录" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:elevation="3dip"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_mycollect"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/collect"/>
            <Button
                android:id="@+id/btn_mycollect"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="我的收藏" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_offlinecenter"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/mydownload"/>
            <Button
                android:id="@+id/btn_offlinecenter"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="离线中心" />
        </LinearLayout>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_setting"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/setting"/>
            <Button
                android:id="@+id/btn_setting"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="设置"
                android:gravity="center"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_help"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/helppicture"/>
            <Button
                android:id="@+id/btn_help"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="帮助"
                android:gravity="center"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@layout/boder">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="    第三方"
            android:textColor="@android:color/background_dark"
            android:gravity="center|left"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_traffic"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/traffic"/>
            <Button
                android:id="@+id/btn_traffic"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="免流量看视频"
                android:gravity="center"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_movieticket"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/movieticket"/>
            <Button
                android:id="@+id/btn_movieticket"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="我的电影票"
                android:gravity="center"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_bankcard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/card"/>
            <Button
                android:id="@+id/btn_bankcard"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="联名银行卡"
                android:gravity="center"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_aboutAs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="关于我们"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:background="@android:color/transparent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CliCli版本:1.0"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="退出登录"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
